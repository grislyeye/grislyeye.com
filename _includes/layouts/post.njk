---
layout: layouts/base.njk
---
<article class="post content">
  <my-page id="post" title="{{ title }}">
    <div class="page-subtitle" slot="subtitle">
      <span>{{ page.date | readableDate }}</span>
      <my-shares href="{{ metadata.url }}{{ page.url }}" title="{{ title }}"></my-shares>
    </div>

    {{ content | safe }}

  </my-page>
</article>

<my-mentions url="{{ metadata.url }}{{ page.url }}" webmentions="{{ config.webmentions.endpoint }}"></my-mentions>
