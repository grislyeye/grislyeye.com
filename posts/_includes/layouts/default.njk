  {% include "../top.njk" %}

  <main>

    {% include "../header.njk" %}

    <div id="content">

      <aside id="sidebar">

        <section id="projects">
          <h3>What I'm Working On</h3>

          {% for product in collections.wipProjects | reverse | limit(6) %}
            <div class="product">
              {{ product.data.publish }}
              <a href="{{ product.url }}"><img src="{{ product.data.image }}" alt="{{ product.data.title }}" loading="lazy"></a>
            </div>
          {% endfor %}
        </section>

        {% if collections.products %}

          <h3>Buy Now</h3>

          {% for product in collections.publishedProducts | reverse | limit(6) %}
            <div class="product">
              {{ product.data.publish }}
              <a href="{{ product.url }}"><img src="{{ product.data.image }}" alt="{{ product.data.title }}" loading="lazy"></a>
            </div>
          {% endfor %}
        {% endif %}

      </aside>

      <div id="articles">
        {% for article in collections.publishedArticles | reverse | limit(12) %}
          <div class="article">
            <a href="{{ article.url }}">

              <h4>{{ article.data.title }}</h4>

              {% if article.data.image %}
                <img src="{{ article.data.image }}" alt="{{ article.data.title }}" class="preview" loading="lazy">
              {% endif %}

              <p>{{ article.data.content | preview }}...</p>
            </a>
          </div>
        {% endfor %}
      </div>
    </div>

  </main>

  {% include "footer.njk" %}
  {% include "analytics.html" %}
  {% include "fuac-show.html" %}

</body>
</html>
