{
  "name": "grislyeye.com",
  "version": "3.29.0",
  "type": "module",
  "scripts": {
    "build": "npx @11ty/eleventy",
    "clean": "rimraf _site",
    "start": "npx @11ty/eleventy --serve --quiet",
    "debug": "DEBUG=Eleventy* npx @11ty/eleventy",
    "debug:start": "DEBUG=Eleventy* npx @11ty/eleventy --serve --quiet",
    "benchmark": "DEBUG=Eleventy:Benchmark* npx @11ty/eleventy",
    "test": "npm run test:lint && npm run test:links",
    "test:lint": "prettier . --check && eslint --ext .js . && stylelint public/css/*.css",
    "test:lint:fix": "prettier . --write",
    "test:links": "npx linkinator ./_site --retry --concurrency 1 --recurse --check-css --check-fragments --verbosity error --skip '(.*\\.reddit\\.com)'",
    "post:new": "plop post",
    "product:new": "plop product"
  },
  "author": {
    "name": "Ric Wood",
    "email": "ric@grislyeye.com",
    "url": "https://grislyeye.com/"
  },
  "dependencies": {
    "@11ty/eleventy-fetch": "^5.1.1",
    "eleventy-google-fonts": "^0.1.0",
    "lit": "^3.3.2",
    "skeleton-css": "^2.0.4",
    "vellum-dice": "^0.3.0",
    "vellum-monster": "^1.3.2",
    "vellum-random-table": "^1.2.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-img": "^6.0.4",
    "@11ty/eleventy-plugin-bundle": "^3.0.7",
    "@11ty/eleventy-plugin-rss": "^2.0.4",
    "@lit-labs/eleventy-plugin-lit": "^1.0.6",
    "@quasibit/eleventy-plugin-sitemap": "^2.2.0",
    "@types/node": "^25.0.3",
    "@webcomponents/template-shadowroot": "^0.2.1",
    "eleventy-plugin-gen-favicons": "^1.1.3",
    "eleventy-plugin-seo": "^0.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-plugin-lit": "^2.1.1",
    "eslint-plugin-wc": "^3.0.2",
    "linkinator": "^7.5.3",
    "luxon": "^3.7.2",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-eleventy-img": "^0.10.2",
    "papaparse": "^5.5.3",
    "plop": "^4.0.4",
    "prettier": "3.7.4",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1"
  }
}
