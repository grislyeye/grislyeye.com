{
  "name": "grislyeye.com",
  "version": "2.11.1",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.1.1",
    "@quasibit/eleventy-plugin-sitemap": "^2.1.5",
    "modern-normalize": "^1.1.0",
    "skeleton-css": "^2.0.4",
    "vellum-monster": "^1.3.2"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0",
    "@11ty/eleventy-plugin-rss": "^1.1.2",
    "cheerio": "^1.0.0-rc.10",
    "eleventy-plugin-seo": "^0.5.2",
    "htmlhint": "^1.1.3",
    "linkinator": "^3.0.3",
    "stylelint": "^14.6.1",
    "stylelint-config-standard": "^25.0.0"
  },
  "scripts": {
    "build": "eleventy",
    "deploy": "curl -X POST \"https://api.cloudflare.com/client/v4/zones/6576d55621fb5a1290106d65ff89aee3/purge_cache\" -H \"X-Auth-Email: ricardo@gladwell.me\"  -H \"X-Auth-Key: ${CLOUDFLARE_API_KEY}\" -H \"Content-Type:application/json\" --data '{\"purge_everything\":true}'",
    "clean": "rm -fr _site",
    "start": "eleventy --serve",
    "test": "htmlhint '_site/**/*.html' --ignore '**/vendor/**' && stylelint assets/styles/*.css && npx linkinator ./_site -ro --recurse --skip '(.*\\.reddit\\.com)|(.*\\.twitter\\.com)|(grislyeye\\.com)|(.*\\.dmsguild\\.com)|(.*\\.drivethrurpg\\.com)|(drivethrurpg\\.com)' --verbosity debug"
  }
}
