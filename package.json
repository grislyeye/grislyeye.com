{
  "name": "grislyeye.com",
  "version": "2.0.1",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.3",
    "modern-normalize": "^1.0.0",
    "skeleton-css": "^2.0.4",
    "vellum-monster": "^1.0.3"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-plugin-rss": "^1.1.1",
    "cheerio": "^1.0.0-rc.5",
    "htmllint-cli": "^0.0.4",
    "linkinator": "^2.13.6",
    "rollup": "^2.42.4",
    "rollup-plugin-node-resolve": "^5.2.0",
    "stylelint": "^13.12.0",
    "stylelint-config-standard": "^21.0.0"
  },
  "scripts": {
    "build": "eleventy",
    "deploy": "curl -X POST \"https://api.cloudflare.com/client/v4/zones/6576d55621fb5a1290106d65ff89aee3/purge_cache\" -H \"X-Auth-Email: ricardo@gladwell.me\"  -H \"X-Auth-Key: ${CLOUDFLARE_API_KEY}\" -H \"Content-Type:application/json\" --data '{\"purge_everything\":true}'",
    "clean": "rm -fr _site",
    "start": "eleventy --serve",
    "test": "htmllint posts/**/*.html && stylelint assets/styles/*.css && npx linkinator ./_site -ro --recurse --skip '(.*\\.reddit\\.com)|(.*\\.twitter\\.com)' --verbosity debug"
  }
}
